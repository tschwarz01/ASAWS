						"language": "sparksql"
					}
				},
				"source": [
					"%%sql\r\n",
					"Update db1.covid_parquet SET total = total * 1.2 where State = 'FL'"
				],
				"execution_count": 5
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"# We cannot update a table that is stored in the parquet format \r\n",
					"parquetInfo = spark.sql('DESCRIBE DETAIL db1.covid_parquet')\r\n",
					"parquetInfo.select('format', 'location').show(truncate=False) \r\n",
					"print(f'The parquet table is stored at the location: {parquetInfo.select(\"location\").first()[0]}')"
				],
				"execution_count": 6
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"# There are two ways to mitigate this issue \r\n",
					"# The first is to convert the parquet table into a delta table \r\n",
					"spark.sql(f'CONVERT TO DELTA PARQUET.`{parquetInfo.select(\"location\").first()[0]}`')"
				],
				"execution_count": 7
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"# Try to update the table again, this time in delta format\r\n",
					"try:\r\n",
					"    spark.sql(f\"UPDATE DELTA.`{parquetInfo.select('location').first()[0]}` SET state='TEST' WHERE state='AZ'\")\r\n",
					"except AnalysisException as err: \r\n",
					"    print(err) \r\n",
					"# We can see that the delta table can be updated correctly "
				],
				"execution_count": 9
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"\r\n",
					"result = spark.sql(f\"SELECT state FROM DELTA.`{parquetInfo.select('location').first()[0]}`\")\r\n",
					"result.show()"
				],
				"execution_count": 11
			},
			{
